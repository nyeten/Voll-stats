<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="640" prefHeight="480"
            style="-fx-background-color: #1e1e1e;">

    <!-- Top Bar with Back Button -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #d94a38;">
            <Button text="Back" onAction="#back" 
                    style="-fx-font-size: 14px; -fx-padding: 6 12; -fx-background-color: #333333; -fx-text-fill: white; -fx-border-color: #aaaaaa; -fx-border-radius: 5; -fx-background-radius: 5;" />
            <Text text="Player Stats" style="-fx-font-size: 22px; -fx-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Center Area -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20;">

            <!-- Block Section -->
            <VBox spacing="6" alignment="CENTER_LEFT">
                <Text text="Block" style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;" />
                <HBox spacing="10">
                    <Button fx:id="blockErrorButton" text="Error" onAction="#blockError" styleClass="statButton"/>
                    <Text fx:id="blockErr" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                    <Button fx:id="blockAssistButton" text="Assist" onAction="#blockAssist" styleClass="statButton"/>
                    <Text fx:id="blockAss" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                    <Button fx:id="blockSoloButton" text="Block" onAction="#blockSolo" styleClass="statButton"/>
                    <Text fx:id="blockSol" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                </HBox>
            </VBox>

            <!-- Attack Section -->
            <VBox spacing="6" alignment="CENTER_LEFT">
                <Text text="Attack" style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;" />
                <HBox spacing="10">
                    <Button fx:id="attackErrorButton" text="Error" onAction="#attackError" styleClass="statButton"/>
                    <Text fx:id="attackErr" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                    <Button fx:id="attackKillButton" text="Kill" onAction="#attackKill" styleClass="statButton"/>
                    <Text fx:id="attackKil" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                </HBox>
            </VBox>

            <!-- Dig Section -->
            <VBox spacing="6" alignment="CENTER_LEFT">
                <Text text="Dig" style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;" />
                <HBox spacing="10">
                    <Button fx:id="digErrorButton" text="Error" onAction="#digError" styleClass="statButton"/>
                    <Text fx:id="digErr" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                    <Button fx:id="digSuccessButton" text="Success" onAction="#digSuccess" styleClass="statButton"/>
                    <Text fx:id="digSucc" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                </HBox>
            </VBox>

            <!-- Set Section -->
            <VBox spacing="6" alignment="CENTER_LEFT">
                <Text text="Set" style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;" />
                <HBox spacing="10">
                    <Button fx:id="setButton" text="Error" onAction="#setError" styleClass="statButton"/>
                    <Text fx:id="setErr" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                    <Button fx:id="setAssistButton" text="Assist" onAction="#setAssist" styleClass="statButton"/>
                    <Text fx:id="setAss" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                </HBox>
            </VBox>

            <!-- Serve Section -->
            <VBox spacing="6" alignment="CENTER_LEFT">
                <Text text="Serve" style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;" />
                <HBox spacing="10">
                    <Button fx:id="serveErrorButton" text="Error" onAction="#serveError" styleClass="statButton"/>
                    <Text fx:id="serveErr" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                    <Button fx:id="serveAceButton" text="Ace" onAction="#serveAce" styleClass="statButton"/>
                    <Text fx:id="serveAce" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                </HBox>
            </VBox>

            <!-- Pass Section -->
            <VBox spacing="6" alignment="CENTER_LEFT">
                <Text text="Pass" style="-fx-font-size: 18px; -fx-fill: white; -fx-font-weight: bold;" />
                <HBox spacing="10">
                    <Button fx:id="passErrorButton" text="Error" onAction="#passError" styleClass="statButton"/>
                    <Text fx:id="passErr" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                    <Button fx:id="passOnTarButton" text="On Target" onAction="#passOnTarget" styleClass="statButton"/>
                    <Text fx:id="passOnTar" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                    <Button fx:id="passOffTarButton" text="Off Target" onAction="#passOffTarget" styleClass="statButton"/>
                    <Text fx:id="passOffTar" text="0" style="-fx-font-size: 16px; -fx-fill: white;" />
                </HBox>
            </VBox>

            <!-- General +1 / -1 Buttons -->
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="plusButton" text="+1" onAction="#plus" styleClass="statButton"/>
                <Button fx:id="minusButton"  text="-1" onAction="#minus" styleClass="statButton"/>
            </HBox>

        </VBox>
    </center>
</BorderPane>