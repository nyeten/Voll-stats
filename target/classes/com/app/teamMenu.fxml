
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="640" prefHeight="480"
            fx:controller="com.app.TeamMenu"
            style="-fx-background-color: #1e1e1e;"> <!-- dark gray background -->

    <!-- ðŸ”º Top bar -->
    <top>
        <BorderPane style="-fx-background-color: #d94a38; -fx-padding: 10;"> <!-- red header -->

            <!-- ðŸ”¹ Left: Exit button -->
            <left>
                <Button text="Exit"
                        onAction="#exit"
                        style="-fx-font-size: 16px; 
                               -fx-padding: 8 16;
                               -fx-background-color: #333333; 
                               -fx-text-fill: white;
                               -fx-border-color: #aaaaaa;
                               -fx-border-radius: 5;
                               -fx-background-radius: 5;"/>
            </left>

            <!-- ðŸ”¹ Center: Team label -->
            <center>
                <HBox alignment="CENTER" spacing="10">
                    <Text text="Teams:"
                          style="-fx-font-size: 18px; -fx-fill: white;"/>
                    <Text fx:id="curTeam" text="Current Team"
                          style="-fx-font-size: 18px; 
                                 -fx-fill: white;
                                 -fx-background-color: #444444;
                                 -fx-padding: 6 10;
                                 -fx-border-color: #aaaaaa;
                                 -fx-border-radius: 4;"/>
                </HBox>
            </center>

            <!-- ðŸ”¹ Right: Team management buttons -->
            <right>
                <HBox spacing="8">
                    <Button fx:id="last" text="Last" onAction="#lastTeam"
                            style="-fx-font-size: 15px; -fx-padding: 6 14; -fx-background-color: #333333; -fx-text-fill: white; -fx-border-color: #aaaaaa;"/>
                    <Button fx:id="next" text="Next" onAction="#nextTeam"
                            style="-fx-font-size: 15px; -fx-padding: 6 14; -fx-background-color: #333333; -fx-text-fill: white; -fx-border-color: #aaaaaa;"/>
                    <Button fx:id="addTeam" text="Add" onAction="#addTeam"
                            style="-fx-font-size: 15px; -fx-padding: 6 14; -fx-background-color: #555555; -fx-text-fill: white; -fx-border-color: #aaaaaa;"/>
                    <Button fx:id="editTeam" text="Edit" onAction="#editTeam"
                            style="-fx-font-size: 15px; -fx-padding: 6 14; -fx-background-color: #777777; -fx-text-fill: white; -fx-border-color: #aaaaaa;"/>
                    <Button fx:id="delTeam" text="Delete" onAction="#deleteTeam"
                            style="-fx-font-size: 15px; -fx-padding: 6 14; -fx-background-color: #aa3333; -fx-text-fill: white; -fx-border-color: #dddddd;"/>
                </HBox>
            </right>
        </BorderPane>
    </top>

    <!-- âš« Center area -->
    <center>
        <VBox fx:id="editorArea"
              spacing="15"
              alignment="CENTER"
              style="-fx-padding: 20;
                     -fx-background-color: #2b2b2b;
                     -fx-border-color: #444444;
                     -fx-border-width: 2;">
        </VBox>
    </center>
</BorderPane>