<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="640" prefHeight="480"
            style="-fx-background-color: #1A1A1A;">

    <!-- ===== TITLE ===== -->
    <top>
        <VBox alignment="CENTER" style="-fx-padding: 40 0 20 0; -fx-background-color: #FF4C4C;;">
            <Text text="Main Menu"
                  style="-fx-font-size: 40px;
                         -fx-font-weight: bold;
                         -fx-fill: white;"/>
        </VBox>
    </top>

    <!-- ===== BUTTONS ===== -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Button fx:id="score" text="Score" onAction="#switchToScore" prefWidth="220" prefHeight="65"/>

            <Button fx:id="gameStarter" text="Start Game" onAction="#switchToStats" prefWidth="220" prefHeight="65"/>

            <Button fx:id="teamEditor" text="Team editor" onAction="#switchToTeamMenu" prefWidth="220" prefHeight="65"/>
        
            <Button fx:id="history" text="Game History" onAction="#switchToHistory" prefWidth="220" prefHeight="65"/>
        </VBox>
    </center>

</BorderPane>