<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            style="-fx-background-color: #1A1A1A;">

    <!-- ===== TOP BAR ===== -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #2B2B2B;">
            <Button text="Back" onAction="#goBack"
                    style="-fx-background-color: #2B2B2B;
                           -fx-text-fill: white;
                           -fx-font-size: 14px;
                           -fx-border-color: red;
                           -fx-border-radius: 6;
                           -fx-background-radius: 6;
                           -fx-padding: 6 12;
                           -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- ===== CENTER CONTENT ===== -->
    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">
            
            <Text fx:id="title" text="Scoreboard"
                  style="-fx-font-size: 36px;
                         -fx-font-weight: bold;
                         -fx-fill: white;"/>

            <!-- Scores Row -->
            <HBox alignment="CENTER" spacing="120">

                <!-- Home Score -->
                <VBox alignment="CENTER" spacing="10">
                    <Text text="Home"
                          style="-fx-font-size: 18px; -fx-fill: white;"/>
                    <Text fx:id="homeScore" text="0"
                          style="-fx-font-size: 64px;
                                 -fx-fill: seagreen;
                                 -fx-font-weight: bold;"/>
                    <HBox alignment="CENTER" spacing="8">
                        <Button text="+1" onAction="#homePlus"
                                style="-fx-background-color: #2B2B2B;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-border-color: red;
                                       -fx-border-radius: 6;
                                       -fx-background-radius: 6;
                                       -fx-padding: 6 12;
                                       -fx-cursor: hand;"/>
                        <Button text="-1" onAction="#homeMinus"
                                style="-fx-background-color: #2B2B2B;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-border-color: red;
                                       -fx-border-radius: 6;
                                       -fx-background-radius: 6;
                                       -fx-padding: 6 12;
                                       -fx-cursor: hand;"/>
                    </HBox>
                </VBox>

                <!-- Away Score -->
                <VBox alignment="CENTER" spacing="10">
                    <Text text="Away"
                          style="-fx-font-size: 18px; -fx-fill: white;"/>
                    <Text fx:id="awayScore" text="0"
                          style="-fx-font-size: 64px;
                                 -fx-fill: seagreen;
                                 -fx-font-weight: bold;"/>
                    <HBox alignment="CENTER" spacing="8">
                        <Button text="+1" onAction="#awayPlus"
                                style="-fx-background-color: #2B2B2B;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-border-color: red;
                                       -fx-border-radius: 6;
                                       -fx-background-radius: 6;
                                       -fx-padding: 6 12;
                                       -fx-cursor: hand;"/>
                        <Button text="-1" onAction="#awayMinus"
                                style="-fx-background-color: #2B2B2B;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-border-color: red;
                                       -fx-border-radius: 6;
                                       -fx-background-radius: 6;
                                       -fx-padding: 6 12;
                                       -fx-cursor: hand;"/>
                    </HBox>
                </VBox>

            </HBox>

            <!-- Reset Button -->
            <Button text="Reset Score" onAction="#resetScore"
                    style="-fx-background-color: #2B2B2B;
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-border-color: red;
                           -fx-border-radius: 8;
                           -fx-background-radius: 8;
                           -fx-padding: 10 20;
                           -fx-cursor: hand;"/>
        </VBox>
    </center>

</BorderPane>
