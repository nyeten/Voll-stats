<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefWidth="640" prefHeight="480"
      style="-fx-background-color: LIGHTCORAL;">

    <Text fx:id="title" text="Score:" layoutX="280" layoutY="100" style="-fx-font-size:80; -fx-fill:seagreen;" />

    <Text fx:id="homeScore" text="0" layoutX="160" layoutY="240" style="-fx-font-size:60; -fx-fill:seagreen;"/>
    <Button text="+1" layoutX="175" layoutY="300" onAction="#homePlus"/>
    <Button text="-1" layoutX="225" layoutY="300" onAction="#homeMinus"/>
    
    <Text fx:id="awayScore" text="0" layoutX="480" layoutY="240" style="-fx-font-size:60; -fx-fill:seagreen;"/>
    <Button text="+1" layoutX="495" layoutY="300" onAction="#awayPlus"/>
    <Button text="-1" layoutX="425" layoutY="300" onAction="#awayMinus"/>

    <Button text="Reset" layoutX="300" layoutY="300" onAction="#resetScore"/>
    <Button text="Back" layoutX="10" layoutY="10" onAction="#goBack"/>


</Pane>


