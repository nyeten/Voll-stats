<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="640" prefHeight="480"
            style="-fx-background-color: #121212;"> <!-- Unified dark background -->

    <!-- ðŸ”º Top Bar -->
    <top>
        <BorderPane style="-fx-background-color: #d94a38; -fx-padding: 12;">
            
            <!-- ðŸ”¹ Exit Button -->
            <left>
                <Button text="Exit"
                        onAction="#exit"
                        style="-fx-font-size: 14px;
                               -fx-padding: 6 14;
                               -fx-background-color: #1e1e1e;
                               -fx-text-fill: white;
                               -fx-border-color: white;
                               -fx-border-radius: 6;
                               -fx-background-radius: 6;
                               -fx-cursor: hand;"/>
            </left>

            <!-- ðŸ”¹ Center Title -->
            <center>
                <Text text="Game History"
                      style="-fx-font-size: 22px;
                             -fx-font-weight: bold;
                             -fx-fill: #ffffff;"/>
            </center>

            <!-- ðŸ”¹ Confirm Button -->

        </BorderPane>
    </top>

    <!-- âš« Scrollable Team List -->
    <center>
            <VBox fx:id="buttonContainer"
                  spacing="10"
                  alignment="CENTER"
                  style="-fx-padding: 20;
                         -fx-background-color: #121212;">

                        <Button text="View Game History" onAction="#openGameHistory"
                        style="-fx-font-size: 16px; -fx-padding: 10 20; -fx-background-color: #333333; -fx-text-fill: white;" />
                        
                        <Text fx:id="instructions" text="game"
                              style="-fx-font-size: 16px; -fx-fill: #888888;"/>

            </VBox>
    </center>

</BorderPane>